<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <include
    android:id="@+id/title"
    layout="@layout/title" />

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/search_drawable"
            android:padding="10dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/et_serch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_drawable2"
            android:hint="请输入房间号"
            android:singleLine="true"
            android:paddingLeft="45dp"
            android:textSize="13sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:layout_below="@id/rl_search"
        android:layout_marginTop="10dp"
        android:background="@color/buttonColorGray"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/rl_choose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_load"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/textColor2"
                android:background="@color/transparent"
                android:text="楼栋信息" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/tv_load"
                android:src="@drawable/up" />
        </RelativeLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/textColor" />

        <RelativeLayout
            android:id="@+id/rl_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_choose_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/textColor2"
                android:background="@color/transparent"
                android:text="验收状态" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@id/tv_choose_state"
                android:src="@drawable/up" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_below="@id/ll_choose"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_room_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/tv_msg"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="未搜索到内容"
            android:textSize="15sp"/>
    </RelativeLayout>

</RelativeLayout>